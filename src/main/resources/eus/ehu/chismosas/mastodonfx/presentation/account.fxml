<GridPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="140.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="229.0" minWidth="10.0" prefWidth="95.0" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="402.0" minWidth="10.0" prefWidth="252.0" />
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="402.0" minWidth="10.0" prefWidth="184.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="82.0" minHeight="10.0" prefHeight="71.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="77.0" minHeight="10.0" prefHeight="77.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <ImageView fx:id="avatar" fitHeight="48.0" fitWidth="48.0" onMouseClicked="#goAccount" pickOnBounds="true" preserveRatio="true" GridPane.halignment="CENTER" GridPane.rowSpan="2">
        <Image url="@darkThemeIcons/user.png" />
    </ImageView>
    <Label fx:id="displayName" text="Label" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.valignment="TOP">
        <GridPane.margin>
          <Insets top="5.0" />
        </GridPane.margin>
        <font>
          <Font size="16.0" />
        </font>
    </Label>
    <Label fx:id="userName" onMouseClicked="#goAccount" text="\@" textFill="WHITE" GridPane.columnIndex="1" GridPane.valignment="BOTTOM">
        <GridPane.margin>
          <Insets bottom="5.0" />
        </GridPane.margin>
        <font>
          <Font name="Inter Regular" size="16.0" />
        </font>
    </Label>
   <Button fx:id="followBtn" mnemonicParsing="false" onAction="#followAccount" prefHeight="29.0" prefWidth="95.0" text="Follow" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowSpan="2" GridPane.valignment="CENTER">
      <font>
         <Font name="System Bold" size="14.0" />
      </font>
   </Button>
</GridPane>
