<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<GridPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints prefHeight="48.0" vgrow="SOMETIMES" />
        <RowConstraints prefHeight="94.0" vgrow="SOMETIMES" />
        <RowConstraints prefHeight="57.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <HBox alignment="CENTER_LEFT" spacing="5.0" GridPane.columnIndex="1" GridPane.columnSpan="3">
        <Label fx:id="displayName" onMouseClicked="#goAccount" text="Display Name" />
        <Label fx:id="userName" onMouseClicked="#goAccount" text="\@username" />
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="date" text="date" />
        <GridPane.margin>
            <Insets right="10.0" />
        </GridPane.margin>
    </HBox>
    <ImageView id="bookmark" fx:id="bookmarkBtn" fitHeight="20.0" fitWidth="20.0" preserveRatio="true" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
    <ImageView id="like" fx:id="likeBtn" fitHeight="20.0" fitWidth="20.0" onMouseClicked="#onLikeBtn" preserveRatio="true" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2">
        <GridPane.margin>
            <Insets right="50.0" />
        </GridPane.margin>
    </ImageView>
    <Label fx:id="like" text="0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2">
        <GridPane.margin>
            <Insets left="30.0" />
        </GridPane.margin>
    </Label>
    <ImageView id="retweet" fx:id="retweetBtn" fitHeight="20.0" fitWidth="20.0" onMouseClicked="#onRetootBtn" preserveRatio="true" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="2">
        <GridPane.margin>
            <Insets right="50.0" />
        </GridPane.margin>
    </ImageView>
    <Label fx:id="retweet" text="0" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="2">
        <GridPane.margin>
            <Insets left="30.0" />
        </GridPane.margin>
    </Label>
    <ImageView id="comments" fx:id="commentBtn" fitHeight="20.0" fitWidth="20.0" preserveRatio="true" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="2">
        <GridPane.margin>
            <Insets right="50.0" />
        </GridPane.margin>
    </ImageView>
    <Label fx:id="comment" text="0" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="2">
        <GridPane.margin>
            <Insets left="30.0" />
        </GridPane.margin>
    </Label>
    <ImageView fx:id="avatar" fitHeight="60.0" fitWidth="60.0" onMouseClicked="#goAccount" preserveRatio="true" GridPane.rowIndex="1">
        <GridPane.margin>
            <Insets bottom="90.0" left="5.0" />
        </GridPane.margin>
    </ImageView>
    <TextFlow maxHeight="Infinity" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
        <GridPane.margin>
            <Insets top="10.0" />
        </GridPane.margin>
        <Text GridPane.vgrow="ALWAYS" id="content" fx:id="contentText" text="Text" />
    </TextFlow>
</GridPane>
